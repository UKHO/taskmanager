@namespace NCNEPortal.Components

<div class="d-flex justify-content-end align-items-center">
    <div class="mr-4">
        <span>Comments</span>
        <label class="switch ml-1 mb-auto">
            <input type="checkbox" class="success">
            <span class="slider"></span>
        </label>
    </div>
    <span class="fa fa-pencil-alt"></span>
    <div class="ml-2"><a href="#">Edit</a></div>
</div>
<div class="d-flex justify-content-end">
    @if (Rework)
    {
        <div class="mt-3 mr-3">
            <button id="btn@(WorkflowStep)Rework" class="btn btn-block btn-secondary">Rework</button>
        </div>
    }
    <div class="mt-3">
        <button id="btn@(WorkflowStep)Complete" class="btn btn-block btn-complete" style="min-width: 139px;">Mark Complete</button>
    </div>
</div>

@code {

    [Parameter]
    public string WorkflowStep { get; set; }

    [Parameter]
    public bool Rework { get; set; }

}
