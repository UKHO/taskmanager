@page
@model Portal.Pages.DbAssessment.VerifyModel
@{
    ViewData["Title"] = "Verify";
}

<script type="text/javascript" src="~/js/Verify.js"></script>
<script type="text/javascript" src="~/js/TaskInformation.js"></script>
<script type="text/javascript" src="~/js/_SourceDocumentDetails.js"></script>
<script type="text/javascript" src="~/js/EditDatabase.js"></script>
<script type="text/javascript" src="~/js/RecordProductAction.js"></script>
<script type="text/javascript" src="~/js/DataImpact.js"></script>
<script type="text/javascript" src="~/js/Comments.js"></script>

<div class="row mt-1">
    <div class="col-4">
        <a asp-page="/Index">
            <img id="ukhoLogo" src="~/images/ukhologo.svg" class="img-responsive" alt="UKHO Logo" />
        </a>
    </div>

    <div class="col-8">
        <div class="row pt-2">
            <div class="col-6">
                <div class="float-right">
                    <h1>DB Assessment</h1>
                </div>
            </div>
            <div class="col-6">
                <div class="float-right">
                    <h1>Verify</h1>
                </div>
            </div>
        </div>
    </div>

</div>

<hr />


<div class="col-12">
    <div class="row justify-content-end btn-size">
        <div class="col-2"><button id="btnReject" class="btn btn-primary btn-block">Reject</button></div>

        <div class="col-2"><input id="btnClose" type="button" class="btn btn-primary btn-block" value="Close" onclick="window.location.href = '/Index'" /></div>
        <div class="col-2"><button id="btnSave" class="btn btn-primary btn-block">Save</button></div>
        <div class="col-2">

            <input type="hidden" asp-for="ProcessId" />
            <button id="btnDone" class="btn btn-primary btn-block" type="button">Sign Off</button>

        </div>
    </div>
</div>

<form id="frmVerifyPage" method="post" asp-page-handler="Done">

    <input type="hidden" id="hdnProcessId" value="@Model.ProcessId" />
    <input type="hidden" asp-for="ProcessId" />
    <input type="hidden" id="pageIdentity" value="@Model.WorkflowStage.ToString()" />

    <div id="taskInformation"></div>
    <div id="taskInformationError"></div>

    @await Html.PartialAsync("_Operators", Model.OperatorsModel).ConfigureAwait(false)

    <div id="sourceDocuments"></div>
    <div id="sourceDocumentsError"></div>

    <div id="editDatabase"></div>
    <div id="editDatabaseError"></div>

    <div id="recordProductAction"></div>
    <div id="recordProductActionError"></div>

    <div id="existingDataImpacts"></div>
    <div id="AddDataImpactsError"></div>

    <div id="existingComments"></div>
    <div id="AddCommentError"></div>
</form>

@* Modal On Hold error comment *@
<div class="modal fade" id="OnHoldError" tabindex="-1" role="dialog" aria-labelledby="OnHoldError" aria-hidden="true">
    <div class="modal-dialog error ">
        <div class="modal-content">
            <form id="frmOnHoldError">
                <div class="modal-header">
                    <h3 id="OnHoldErrorTitle">Error</h3>
                </div>
                <div class="modal-body pb-0">
                    <div class="align-items-center align-content-center" style="overflow: hidden;">
                        <p class="mr-2" style="float: left"><i class="fa fa-info-circle"></i></p>
                        <p id="OnHoldErrorMessage"></p>
                    </div>
                    <input type="hidden" asp-for="ProcessId" />
                </div>
                <div class="modal-footer">
                    <div class="row col-11 justify-content-end">
                        <div class="col-5 pr-1"><button type="button" id="btnOnHoldErrorOk" class="btn btn-danger btn-block" accesskey="o" data-dismiss="modal" data-toggle="tooltip" data-placement="left" title="On Hold Error">Ok</button></div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<div class="modal fade" id="modalWaitVerifyDone" tabindex="-1" role="dialog" aria-labelledby="modalWait" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><span style="margin-right: 10px;" class="fas fa-crosshairs fa-spin"></span> Please Wait</h4>
            </div>
            <div class="modal-body">
                <ul>
                    <li>Verifying Data...</li>
                    <li>Saving Data...</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalWaitVerifyReject" tabindex="-1" role="dialog" aria-labelledby="modalWait" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><span style="margin-right: 10px;" class="fas fa-crosshairs fa-spin"></span> Please Wait</h4>
            </div>
            <div class="modal-body">
                <ul>
                    <li>Rejecting Task...</li>
                </ul>
            </div>
        </div>
    </div>
</div>


@* Modal Add Rejection comment *@
<div class="modal fade" id="ConfirmReject" tabindex="-1" role="dialog" aria-labelledby="ConfirmReject" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Reject DB Assessment</h4>
            </div>
            <div class="modal-body">
                <p>Provide a reason for rejecting this DB Assessment</p>
                <div id="modal-body">
                    <textarea style="height: 100px;" id="txtRejectComment" name="comment" class="form-control"></textarea>
                    <br />
                    <div id="ConfirmRejectError"></div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row col-11 justify-content-end">
                    <div class="col-5 pr-1"><button type="button" id="btnCancelReject" class="btn btn-outline-secondary btn-block" accesskey="c" data-dismiss="modal" data-toggle="tooltip" data-placement="left" title="Cancel Reject">Cancel</button></div>
                    <div class="col-5 pl-1 pr-0"><button type="button" id="btnConfirmReject" accesskey="a" class="btn btn-warning btn-block" data-toggle="tooltip" data-placement="left" title="Confirm Reject">Reject</button></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalWaitVerifyDoneErrors" tabindex="-1" role="dialog" aria-labelledby="VerifyDoneErrors" aria-hidden="true">
    <div class="modal-dialog error ">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Error while saving data</h3>
            </div>
            <div class="modal-body">
                <div class="d-flex align-items-center align-content-center justify-content-center mb-1 mt-n1" style="overflow: hidden;">
                    <div class="col-1 mr-4">
                        <i class="fa fa-info-circle" style="font-size: 1.50rem;"></i>
                    </div>
                    <div id="verifyDoneErrorMessage" class="col-11">
                        @if (Model.ValidationErrorMessages != null && Model.ValidationErrorMessages.Count > 0)
                        {
                            <ul>
                                @foreach (var message in Model.ValidationErrorMessages)
                                {
                                    <li>@message</li>
                                }
                            </ul>
                        }
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row col-11 justify-content-end">
                    <div class="col-5 pr-1"><button type="button" id="btnVerifyDoneErrorOk" class="btn btn-danger btn-block" accesskey="o" data-dismiss="modal" data-toggle="tooltip" data-placement="left" title="Error Saving Data">Ok</button></div>
                </div>
            </div>
        </div>
    </div>
</div>


@* Modal for warning of open child tasks *@
<div class="modal fade" id="modalOpenChildTaskWarning" tabindex="-1" role="dialog" aria-labelledby="OpenChildTaskWarning" aria-hidden="true">
    <div class="modal-dialog warning ">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Parent with active children</h3>
            </div>
            <div class="modal-body">
                <h6>The current task has the following active child tasks:</h6>
                <div class="d-flex align-items-center align-content-center justify-content-center mb-1 mt-n1" style="overflow: hidden;">
                    <div class="col-1 mr-4">
                        <i class="fa fa-info-circle" style="font-size: 1.50rem;"></i>
                    </div>
                    <div id="childTaskWarningMessages" class="col-11">
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="row col-11 justify-content-end">
                        <div class="col-5 pr-1"><button type="button" id="btnCancelChildTaskWarning" class="btn btn-outline-secondary btn-block" accesskey="c" data-dismiss="modal" data-toggle="tooltip" data-placement="left" title="Cancel Sign Off">Cancel</button></div>
                        <div class="col-5 pl-1 pr-0"><button type="submit" id="btnContinueChildTaskWarning" accesskey="a" class="btn btn-warning btn-block" data-toggle="tooltip" data-placement="left" title="Confirm Sign Off">Sign Off</button></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* Modal for warning of unsaved form on reject *@
<div class="modal fade" id="modalUnsavedWarning" tabindex="-1" role="dialog" aria-labelledby="UnsavedWarning" aria-hidden="true">
    <div class="modal-dialog warning ">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Unsaved changes detected.</h3>
            </div>
            <div class="modal-body">
                <div class="d-flex align-items-center align-content-center justify-content-center mb-1 mt-n1" style="overflow: hidden;">
                    <div class="col-1 mr-4">
                        <i class="fa fa-info-circle" style="font-size: 1.50rem;"></i>
                    </div>
                    <div class="col-11">
                        <ul><li>Continue rejecting task?</li></ul>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="row col-11 justify-content-end">
                        <div class="col-5 pr-1"><button type="button" id="btnCancelUnsavedWarning" class="btn btn-outline-secondary btn-block" accesskey="c" data-dismiss="modal" data-toggle="tooltip" data-placement="left" title="Cancel Rejection">Cancel</button></div>
                        <div class="col-5 pl-1 pr-0"><button type="submit" id="btnContinueRejection" accesskey="a" class="btn btn-warning btn-block" data-toggle="tooltip" data-placement="left" title="Continue With Rejection">Continue Reject</button></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>